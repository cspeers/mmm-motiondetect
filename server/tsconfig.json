{
    "compilerOptions": {
        "inlineSourceMap": false,
        "noImplicitAny": true,
        "target": "ES6",
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "alwaysStrict": true,
        "diagnostics": false,
        "listFiles": false,
        "noEmitOnError": true,
        "composite": true,
        "outDir": "../",
        "baseUrl": "../",
        "typeRoots": [
            "../node_modules/@types",
            "../@types/"
        ]
    },
    "include":[
        "./*"
    ],
    "exclude": [
        "../@types/**"
    ]
}